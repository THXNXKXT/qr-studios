# ===========================================
# QR Studios - Production Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to git!
# ===========================================

# App URLs
APP_URL=https://yourdomain.com

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
NEXTAUTH_SECRET=your-nextauth-secret-here

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Admin Discord IDs (comma separated)
ADMIN_DISCORD_IDS=123456789012345678,987654321098765432

# Stripe
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Cloudflare R2
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=qr-studios
R2_PUBLIC_URL=https://your-r2-public-url.r2.dev

# Optional: Sentry (Error Monitoring)
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
