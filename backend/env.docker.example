# ===========================================
# QR Studios Backend - Docker Environment
# ===========================================
# Copy to .env and fill in values
# NEVER commit .env to git!
# ===========================================

# Database (local Docker PostgreSQL)
DB_USER=qrstudios
DB_PASSWORD=your-secure-password-here
DB_NAME=qrstudios

# Node Environment
NODE_ENV=development

# JWT Secrets (generate: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
NEXTAUTH_SECRET=your-nextauth-secret-here

# Discord OAuth (https://discord.com/developers/applications)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Admin Discord IDs (comma separated)
ADMIN_DISCORD_IDS=123456789,987654321

# Stripe (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Cloudflare R2 (https://dash.cloudflare.com)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=qr-studios
R2_PUBLIC_URL=

# Email (Optional - Resend)
RESEND_API_KEY=
EMAIL_FROM=noreply@qrstudio.com

# URLs
FRONTEND_URL=http://localhost:3000
