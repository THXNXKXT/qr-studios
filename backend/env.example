# =============================================
# QR Studios - Backend Environment Variables
# =============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!
# =============================================

# Server Configuration
NODE_ENV=development
PORT=4001
API_URL=http://localhost:4001
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
# For Neon: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/qrstudios

# JWT Authentication
# Generate with: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# NextAuth (must match frontend)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key

# Discord OAuth
# Get from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Admin Discord IDs (comma-separated)
ADMIN_DISCORD_IDS=discord_id_1,discord_id_2

# Stripe Payments
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_key

# Cloudflare R2 Storage
# Get from: Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=qr-studios
R2_PUBLIC_URL=https://your-r2-public-url.r2.dev

# Redis (for production rate limiting & caching)
# Optional for development
REDIS_URL=redis://localhost:6379

# Email (Resend)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_key
EMAIL_FROM=noreply@qrstudio.com

# Sentry Error Monitoring
# Get from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your-sentry-dsn

# Admin IP Whitelist (comma-separated, optional)
# Leave empty to disable IP restriction
ALLOWED_ADMIN_IPS=

# File Storage Path (for local downloads)
STORAGE_PATH=storage/downloads
